{{ define "home" }}
  {{ if not .prd }}
    <link href="/assets/stylesheets/home.css" rel="stylesheet">
  {{ end }}

  <style>
    .footer {
      margin: -80px 0 0 0;
    }
  </style>

  <div class="tags-container">
    {{ if $.selectedTag }}
      <a href="/">
        <button class="ui inverted teal button show-all-btn">
          Show All
        </button>
      </a>
    {{ end }}
    <div class="tag-list">
      {{ range $_, $tag := .rawData.Tags }}
        {{ if eq $.selectedTag $tag }}
          <div class="tag-link tag-selected">
            {{ $times := index $.rawData.TagTimes $tag }}
            {{ $extraSize := mul $times 0.6 }}
            <a href="/?tag={{$tag}}" style="font-size:{{ add $extraSize 16 }}px;">{{$tag}}</a>
          </div>
        {{ else }}
          <div class="tag-link">
            {{ $times := index $.rawData.TagTimes $tag }}
            {{ $extraSize := mul $times 0.6 }}
            <a href="/?tag={{$tag}}" style="font-size:{{ add $extraSize 16 }}px;">{{$tag}}</a>
          </div>
        {{ end }}
      {{ end }}
    </div>
  </div>

  {{ if not .prd }}
    <script src="/assets/javascripts/home.js"></script>
  {{ end }}
{{ end }} 